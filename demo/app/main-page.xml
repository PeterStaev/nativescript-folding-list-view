<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:flv="nativescript-folding-list-view"
      navigatingTo="navigatingTo" class="page">

    <Page.actionBar>
        <ActionBar title="Folding LV" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <GridLayout>
        <flv:FoldingListView id="lv" items="{{ items }}" foldsCount="5" foldedRowHeight="95" 
            loadMoreItems="loadMoreItems" itemLoading="itemLoading" detailDataLoader="detailDataLoader">
            <flv:FoldingListView.foregroundItemTemplate>
                <!-- <GridLayout rows="auto, *, auto" style="background-color: red; margin: 5 10; padding: 0; border-width: 1;">
                    <Label row="0" text="{{ 'Folded ' + item }}" />
                    <Label row="2" text="{{ 'Folded ' + item }}" style="text-align:right" />
                </GridLayout> -->
                <GridLayout columns="75, *" class="folded-cell">
                    <GridLayout row="0" col="0" rows="*, auto, auto, *" class="item-nbr" orientation="vertical">
                        <Label row="1" text="Item"/>
                        <Label row="2" text="{{ '#' + item }}"/>
                        <ActivityIndicator row="3" busy="{{ isBusyIn }}" />
                    </GridLayout>
                    <StackLayout col="1" padding="10">
                        <Label class="h2" text="My Header"/>
                        <Label class="label" textWrap="true" text="Short description. Tap to see more!"/>
                    </StackLayout>
                </GridLayout>
            </flv:FoldingListView.foregroundItemTemplate>
            <flv:FoldingListView.containerItemTemplate>
                <!-- <GridLayout rows="auto, *, auto" style="background-color: blue; margin: 10; padding: 10; height: 200">
                    <Label row="0" text="{{ 'Expanded ' + item }}" />
                    <Label row="2" text="{{ 'Expanded ' + item }}" style="text-align:right" />
                </GridLayout> -->
                <StackLayout rows="auto, *, auto" class="expanded-cell">
                    <Label row="0" class="item-nbr" text="{{ 'Item #' + item }}" />
                    <Label row="1" class="label" textWrap="true" text="{{ details }}" />
                    <Button row="2" class="btn btn-primary" text="Click Me!" />
                </StackLayout>
            </flv:FoldingListView.containerItemTemplate>
        </flv:FoldingListView>

        <!-- <ListView id="lv" items="{{ items }}">
            <ListView.itemTemplate>
                <GridLayout columns="75, *" class="folded-cell">
                    <GridLayout row="0" col="0" rows="*, auto, auto, *" class="item-nbr" orientation="vertical">
                        <Label row="1" text="Item"/>
                        <Label row="2" text="{{ '#' + item }}"/>
                    </GridLayout>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView> -->
    </GridLayout>
</Page>
